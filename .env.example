# TrackPilot Environment Configuration Template
# Copy this file to .env and customize for your environment

# ===================
# Application Settings
# ===================
NODE_ENV=production
APP_VERSION=1.0.0
APP_NAME=TrackPilot

# ===================
# Network Configuration
# ===================
# Core API server
CORE_HTTP_PORT=8080
CORE_HOST=0.0.0.0

# Frontend web server  
WEB_PORT=3000
WEB_HOST=0.0.0.0

# External access ports
HTTP_PORT=80
HTTPS_PORT=443

# ===================
# Database Configuration
# ===================
# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=trackpilot
DB_USER=trackpilot
DB_PASSWORD=trackpilot123
DB_MAX_CONNECTIONS=100

# Redis Cache
REDIS_HOST=redis  
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0

# ===================
# Security & Authentication
# ===================
# JWT Token Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ALGORITHM=HS256

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:80
CORS_CREDENTIALS=true

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===================
# Logging & Monitoring  
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_FILES=10
LOG_MAX_SIZE=100mb

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# Enable monitoring stack
MONITORING_ENABLED=true
METRICS_ENABLED=true
TRACING_ENABLED=false

# ===================
# AI & ML Configuration
# ===================
# Model Settings
AI_MODEL_PATH=/app/models/current_model.pt
AI_BATCH_SIZE=32
AI_INFERENCE_TIMEOUT=5000
AI_CONFIDENCE_THRESHOLD=0.7

# Training Settings  
TRAINING_DATA_PATH=/app/data/training
MODEL_CHECKPOINT_PATH=/app/models/checkpoints
TRAINING_LOG_LEVEL=INFO

# GPU Settings (if available)
CUDA_VISIBLE_DEVICES=0
CUDA_ENABLED=false

# ===================
# External Services
# ===================
# Weights & Biases (optional)
WANDB_API_KEY=
WANDB_PROJECT=trackpilot-production
WANDB_ENABLED=false

# Message Queue (optional)
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=trackpilot
RABBITMQ_PASSWORD=rabbitmq123
RABBITMQ_MANAGEMENT_PORT=15672

# Email Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@trackpilot.ai

# ===================
# Performance & Scaling
# ===================
# Worker Processes
CORE_WORKERS=4
WEB_WORKERS=2

# Connection Pools
DB_POOL_MIN=5
DB_POOL_MAX=20
REDIS_POOL_MIN=5  
REDIS_POOL_MAX=50

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_MEMORY=512mb

# ===================
# Development Settings
# ===================
# Development Features
DEBUG_MODE=false
HOT_RELOAD=false
PROFILING_ENABLED=false

# Test Database (for development)
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=trackpilot_test

# ===================
# Build & Deployment
# ===================
# Docker Build Args
BUILD_DATE=
VCS_REF=
BUILD_VERSION=1.0.0

# Container Registry
DOCKER_REGISTRY=
DOCKER_NAMESPACE=trackpilot
DOCKER_TAG=latest

# ===================
# SSL/TLS Configuration  
# ===================
# SSL Settings
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/trackpilot.crt
SSL_KEY_PATH=/etc/ssl/private/trackpilot.key
SSL_REDIRECT=false

# ===================
# Backup Configuration
# ===================  
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# ===================
# Feature Flags
# ===================
# Experimental Features
ENABLE_REAL_TIME_UPDATES=true
ENABLE_OVERRIDE_LEARNING=true
ENABLE_PERFORMANCE_PROFILING=false
ENABLE_ADVANCED_ANALYTICS=true

# Safety Features
ENABLE_SAFETY_CHECKS=true
ENABLE_EMERGENCY_OVERRIDE=true
ENABLE_AUDIT_LOGGING=true

# UI Features  
ENABLE_DARK_MODE=true
ENABLE_SOUND_ALERTS=true
ENABLE_MOBILE_UI=false